@model Spotix.Utilities.Models.ViewModels.EditProfileVM

<div class="container">
    <h2 class="text-center">修改個人資料</h2>
    <form asp-action="EditProfile" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserName" class="form-label">使用者名稱</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender" class="form-label">性別</label>
            <div class="form-check">
                <input asp-for="Gender" class="form-check-input" type="radio" value="false" id="genderMale" />
                <label for="genderMale" class="form-check-label">男性</label>
            </div>
            <div class="form-check">
                <input asp-for="Gender" class="form-check-input" type="radio" value="true" id="genderFemale" />
                <label for="genderFemale" class="form-check-label">女性</label>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Birthday" class="form-label">生日</label>
            <input asp-for="Birthday" type="date" class="form-control" />
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="form-label">電話號碼</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="form-label">地址</label>
            <input asp-for="Address" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">儲存變更</button>
    </form>
</div>

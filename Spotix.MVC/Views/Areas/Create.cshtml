@using Spotix.Utilities.Models
@model Spotix.Utilities.Models.ViewModels.AreaVM
@{
    ViewData["Title"] = "Create";
}


<h4 class="fw-bolder mt-5">新增區域和票價 : </h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SessionId" class="control-label">場次名稱</label>
                <select asp-for="SessionId" class="form-control" asp-items="ViewBag.SessionList"></select>
                <span asp-validation-for="SessionId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="mb-3 mt-5">
                <input type="submit" value="新增" class="btn btn-outline-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">回到清單頁</a>
            </div>

        </form>
    </div>
</div>







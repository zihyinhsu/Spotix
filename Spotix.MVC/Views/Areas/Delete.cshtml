@model Spotix.Utilities.Models.ViewModels.AreaVM

@{
    ViewData["Title"] = "票價座位區";
}


<h2 class="fw-bolder m-3">刪除確認</h2>

<h5 class="m-3">您確定要刪除這個票價、區域嗎?</h5>
<hr class="mx-4" />

<div class="px-4 pb-4">
    <div class="row mr-0">
        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.Price)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.Price)
        </div>

        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.SessionName)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.SessionName)
        </div>

        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.Qty)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.Qty)
        </div>
        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.DisplayOrder)
        </div>
        @* <div class = "col-2 py-3"> *@
        @*     @Html.DisplayNameFor(model => model.PlaceId) *@
        @* </div> *@
        @* <div class = "col-10 py-3"> *@
        @*     @Html.DisplayFor(model => model.PlaceId) *@
        @* </div> *@
    </div>
    <form asp-action="Delete" class="mt-5">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="刪除" class="btn btn-outline-danger mr-2" />
        <a asp-action="Index" class="btn btn-secondary">回到清單頁</a>
    </form>
</div>

<script>
    const info = document.getElementById("info")
    info.innerHTML = @Html.Raw(Json.Serialize(ViewBag.Content));
</script>

@model Spotix.Utilities.Models.EFModels.Place

@{
    ViewData["Title"] = "新增場地";
}

<h2 class="fw-bolder m-3">新增場地</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="Name" class="control-label">場地名稱</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="DisplayOrder" class="control-label">顯示順序</label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-check m-3">
                <input asp-for="Enabled" class="form-check-input" type="checkbox" />
                <label asp-for="Enabled" class="form-check-label">是否可使用</label>
                <span asp-validation-for="Enabled" class="text-danger"></span>
            </div>
            <div class="m-3">
                <button type="submit" class="btn btn-outline-primary">新增</button>
                <a asp-action="Index" class="btn btn-secondary">回到清單頁</a>
            </div>
        </form>
    </div>
</div>


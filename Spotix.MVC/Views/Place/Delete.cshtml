@model Spotix.Utilities.Models.EFModels.Place

@{
    ViewData["Title"] = "刪除確認";
}

<h2 class="fw-bolder m-3">刪除確認</h2>

<h5 class="m-3">您確定要刪除這個場地嗎?</h5>
<div class="m-3">
    <dl class="row">
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Name) *@場地名稱
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.DisplayOrder) *@顯示順序
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DisplayOrder)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Enabled) *@是否可使用
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Enabled)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="m-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="刪除" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-secondary">回到清單頁</a>
    </form>
</div>

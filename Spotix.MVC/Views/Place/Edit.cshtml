@model Spotix.Utilities.Models.EFModels.Place

@{
    ViewData["Title"] = "編輯場地";
}

<h2 class="fw-bolder m-3">編輯場地</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group m-3">
                <label asp-for="Name" class="control-label">場地名稱</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="DisplayOrder" class="control-label">顯示順序</label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group form-check m-3">
                <input class="form-check-input" asp-for="Enabled" /> @* @Html.DisplayNameFor(model => model.Enabled) *@
                <label class="form-check-label">是否可使用</label>
            </div>
            <div class="form-group m-3">
                <input type="submit" value="儲存變更" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-secondary">回到清單頁</a>
            </div>
        </form>
    </div>
</div>


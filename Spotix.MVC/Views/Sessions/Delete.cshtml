@model Spotix.Utilities.Models.EFModels.Session

@{
    ViewData["Title"] = "Delete";
}

<h2 class="fw-bolder m-3">刪除確認</h2>

<h5 class="m-3">您確定要刪除這個場次嗎?</h5>
<div class="m-3">
    <dl class="row">
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Name) *@場次名稱
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.SessionTime) *@開演時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SessionTime)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.AvailableTime) *@開賣時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableTime)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.PublishTime) *@上架時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishTime)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Published) *@上架
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Published)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Event.Host)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="刪除" class="btn btn-danger btn-sm" /> |
        <a asp-action="Index" class="m-3">Back to List</a>
    </form>
</div>

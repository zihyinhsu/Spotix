@model Spotix.Utilities.Models.EFModels.Session

@{
    ViewData["Title"] = "刪除確認";
}

<h2 class="fw-bolder m-3">刪除確認</h2>

<h5 class="m-3">您確定要刪除這個場次嗎?</h5>
<div class="m-3">
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name" class="control-label">場次名稱</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="SessionTime" class="control-label">開演時間</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SessionTime)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="AvailableTime" class="control-label">開賣時間</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailableTime)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="PublishTime" class="control-label">上架時間</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishTime)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Published" class="form-check-label">上架</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Published)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="EventId" class="control-label">活動名稱</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Name)
            <span asp-validation-for="EventId" class="text-danger"></span>
        </dd>
    </dl>

    <form asp-action="Delete" class="m-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="刪除" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-secondary">回到清單頁</a>
    </form>
</div>

@model Spotix.Utilities.Models.ViewModels.SessionVM

@{
    ViewData["Title"] = "場次清單";
}

<h2 class="fw-bolder m-3">刪除確認</h2>

<h5 class="m-3">您確定要刪除這個場次嗎?</h5>
<hr class="mx-4" />
<div class="px-4 pb-4">
    <div class="row mr-0">
        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.SessionTime)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.SessionTime)
        </div>
        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.AvailableTime)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.AvailableTime)
        </div>
        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.PublishTime)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.PublishTime)
        </div>
        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.Published)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.Published)
        </div>
        <div class="col-2 py-3">
            @Html.DisplayNameFor(model => model.EventName)
        </div>
        <div class="col-10 py-3">
            @Html.DisplayFor(model => model.EventName)
        </div>
    </div>

    <form asp-action="Delete" class="my-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="刪除" class="btn btn-outline-danger mr-2" />
        <a asp-action="Index" class="btn btn-secondary">回到清單頁</a>
    </form>
</div>

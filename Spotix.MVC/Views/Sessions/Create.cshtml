@model Spotix.Utilities.Models.EFModels.Session

@{
    ViewData["Title"] = "新增場次";
}

<h2 class="fw-bolder m-3">新增場次</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group m-3">
                <label asp-for="Name" class="control-label">場次名稱</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="SessionTime" class="control-label">開演時間</label>
                <input asp-for="SessionTime" class="form-control" />
                <span asp-validation-for="SessionTime" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="AvailableTime" class="control-label">開賣時間</label>
                <input asp-for="AvailableTime" class="form-control" />
                <span asp-validation-for="AvailableTime" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="PublishTime" class="control-label">上架時間</label>
                <input asp-for="PublishTime" class="form-control" />
                <span asp-validation-for="PublishTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check m-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Published" /> @* @Html.DisplayNameFor(model => model.Published) *@上架
                </label>
            </div>
            <div class="form-group m-3">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventList"></select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>
            <div class="m-3">
                <input type="submit" value="新增" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-secondary">回到清單頁</a>
            </div>
        </form>
    </div>
</div>




@model Spotix.Utilities.Models.EFModels.Session

@{
    ViewData["Title"] = "Edit";
}

<h2 class="fw-bolder m-3">編輯場次</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group m-3">
                <label asp-for="Name" class="control-label">場次名稱</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger">名稱不可為空白</span>
            </div>
            <div class="form-group m-3">
                <label asp-for="SessionTime" class="control-label">開演時間</label>
                <input asp-for="SessionTime" class="form-control" />
                <span asp-validation-for="SessionTime" class="text-danger">內容不可為空白</span>
            </div>
            <div class="form-group m-3">
                <label asp-for="AvailableTime" class="control-label">開賣時間</label>
                <input asp-for="AvailableTime" class="form-control" />
                <span asp-validation-for="AvailableTime" class="text-danger">內容不可為空白</span>
            </div>
            <div class="form-group m-3">
                <label asp-for="PublishTime" class="control-label">上架時間</label>
                <input asp-for="PublishTime" class="form-control" />
                <span asp-validation-for="PublishTime" class="text-danger">內容不可為空白</span>
            </div>
            <div class="form-group form-check m-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Published" /> @* @Html.DisplayNameFor(model => model.Published) *@上架
                </label>
            </div>
            <div class="form-group m-3">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventList"></select>
                <span asp-validation-for="EventId" class="text-danger">內容不可為空白</span>
            </div>
            <div class="form-group m-3">
                <input type="submit" value="儲存" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="m-3">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
